<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title ? @page_title : 'Welcome'%> | Football</title>
    <%= csrf_meta_tags %>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" >INFORMATION</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Home', root_path%></li>
            <li><%= link_to 'About', about_path%></li>
          </ul>

        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add New <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Team', new_soccer_path%></li>
                <li><%= link_to 'Stadium', new_pitch_path%></li>
                <li><%= link_to 'Sponsor', new_sponsor_path%></li>
                <li><%= link_to 'Coach', new_coach_path%></li>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage <span class="caret"></span></a>
          <ul class="dropdown-menu ">
            <li><%= link_to 'Coach', coaches_path%></li>
            <li><%= link_to 'Stadium', pitches_path%></li>
            <li><%= link_to 'Sponsor', sponsors_path%></li>
          </ul>
        </li>
        </ul>



        </div><!--/.nav-collapse -->
      </div>
    </nav>

	<header>
		<div class="container">
			<h1>Football <small> <%= @page_title ? @page_title : 'Welcome'%></small></h1>
		</div>
	</header>

    <section>
    	<div class = "container">
    		<div class="row">
    			<div class="col-md-8">
          <% if flash[:notice] %>
            <div class = "alert alert-success"><%= flash[:notice] %></div>
          <% end %>

          <% if flash[:alert] %>
            <div class = "alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

    				<%= yield %>

    			</div>
    			<div class="col-md-4">
    				<%= render 'partials/sidebar' %>
    			</div>
    		</div>
    	</div>
	</section>

	<footer>
		<div class="container">
			<p>Copyright &copy; 2017, All Rights Resrved</p>
		</div>
	</footer>
  </body>
</html>
